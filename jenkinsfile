
pipeline {
    agent {
        docker { image 'node:22.2.0-alpine' }
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Application') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Serve Application') {
            steps {
                sh 'npm start &'
            }
        }
    }

    post {
        always {
            // Cleanup or additional steps
            cleanWs()
        }
    }
}